{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "g++",
            "args": [
                "-Wall",
                "-std=c++11",
                "-I",
                "/usr/local/Cellar/antlr4-cpp-runtime/4.7.1/include/antlr4-runtime",
                "-L",
                "/usr/local/Cellar/antlr4-cpp-runtime/4.7.1/lib",
                "-o",
                "helloWorld",
                "src/JSONLexer.cpp",
                "src/JSONParser.cpp",
                "src/JSONBaseListener.cpp",
                "src/JSONBaseVisitor.cpp",
                "src/MWMain.cpp",
                "-lantlr4-runtime"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/**",
                    "/usr/local/Cellar/antlr4-cpp-runtime/4.7.1/include//antlr4-runtime"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}